@using UserApp.DataLayer.Entities
@model UserEntity

<div class="card" style="width: 22rem; border-radius: 1rem; margin-left: 440px; margin-bottom: 20px;">
    <div class="card-body d-flex align-items-center">
        <div class="d-flex flex-column">
            <span class="fw-semibold" style="font-size: 1.1rem; align-content: center; margin-left: 85px;">@Model.Name</span>
            <span class="text-muted" style="font-size: 0.95rem; align-content: center; margin-left: 85px;">@Model.Email</span>
        </div>
    </div>
</div>

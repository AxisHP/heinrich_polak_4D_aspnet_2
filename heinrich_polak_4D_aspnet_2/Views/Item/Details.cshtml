@model Common.DTO.ItemDTO

@{
    ViewData["Title"] = "Item Details";
    var isFavorite = ViewBag.IsFavorite as bool? ?? false;
    var isLoggedIn = !string.IsNullOrEmpty(Context.Session.GetString("UserEmail"));
}

<h1>@Model.Name</h1>

<div class="card" style="max-width: 600px;">
    <div class="card-body">
        <p><strong>Description:</strong> @Model.Description</p>
        <p><strong>Price:</strong> @Model.Price.ToString("C")</p>
        <p><strong>In Stock:</strong> @Model.StockQuantity</p>
        <p><strong>Category:</strong> @Model.CategoryName</p>

        @if (isLoggedIn)
        {
            <div class="mt-3">
                <form asp-action="AddToCart" method="post" class="d-inline">
                    <input type="hidden" name="itemPublicId" value="@Model.PublicId" />
                    <input type="number" name="quantity" value="1" min="1" max="@Model.StockQuantity" style="width: 60px;" />
                    <button type="submit" class="btn btn-success">Add to Cart</button>
                </form>

                @if (isFavorite)
                {
                    <form asp-action="RemoveFromFavorites" method="post" class="d-inline">
                        <input type="hidden" name="itemPublicId" value="@Model.PublicId" />
                        <button type="submit" class="btn btn-outline-danger">Remove from Favorites</button>
                    </form>
                }
                else
                {
                    <form asp-action="AddToFavorites" method="post" class="d-inline">
                        <input type="hidden" name="itemPublicId" value="@Model.PublicId" />
                        <button type="submit" class="btn btn-outline-primary">Add to Favorites</button>
                    </form>
                }
            </div>
        }
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@model Common.DTO.ItemDTO

@{
    ViewData["Title"] = "Item Details";
    var isFavourite = ViewBag.IsFavourite as bool? ?? false;
    var isLoggedIn = !string.IsNullOrEmpty(Context.Session.GetString("UserEmail"));
}

<h1>@Model.Name</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card" style="max-width: 600px;">
    <div class="card-body">
        <p><strong>Description:</strong> @Model.Description</p>
        <p><strong>Price:</strong> @Model.Price.ToString("C")</p>
        <p><strong>In Stock:</strong> @Model.StockQuantity</p>
        <p><strong>Category:</strong> @Model.CategoryName</p>

        @if (isLoggedIn)
        {
            <div class="mt-3">
                <form asp-action="AddToCart" method="post" class="d-inline">
                    <input type="hidden" name="itemPublicId" value="@Model.PublicId" />
                    <input type="number" name="quantity" value="1" min="1" max="1000" style="width: 80px;" />
                    <button type="submit" class="btn btn-success">Add to Cart</button>
                </form>

                @if (isFavourite)
                {
                    <form asp-action="RemoveFromFavourites" method="post" class="d-inline">
                        <input type="hidden" name="itemPublicId" value="@Model.PublicId" />
                        <button type="submit" class="btn btn-outline-danger">Remove from Favourites</button>
                    </form>
                }
                else
                {
                    <form asp-action="AddToFavourites" method="post" class="d-inline">
                        <input type="hidden" name="itemPublicId" value="@Model.PublicId" />
                        <button type="submit" class="btn btn-outline-primary">Add to Favourites</button>
                    </form>
                }
            </div>
        }
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

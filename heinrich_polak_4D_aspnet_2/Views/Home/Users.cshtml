@using Common.DTO;
@model List<UserDTO>

@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>
<a class="btn btn-primary" asp-controller="Home" asp-action="CreateUser">Create New User</a>
<button type="button" class="btn btn-danger" onclick="deleteSelectedUsers()">Delete Selected Users</button>

<form id="deleteSelectedForm" method="post" action="@Url.Action("DeleteRangeUser", "Home")" style="display: none;">
    <input type="hidden" id="selectedUserIds" name="selectedUserIds" />
</form>

<table class="table">
    <thead>
        <tr>
            <th>Select</th>
            <th>Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Date of Birth</th>
            <th>Phone Number</th>
            <th>Address</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    <input type="checkbox" class="user-checkbox" value="@user.PublicId" />
                </td>
                <td>
                    <a href="@Url.Action("userDetail", "Home", new { userPublicId = user.PublicId })">
                        @user.Name
                    </a>
                </td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.DateOfBirth.ToString("yyyy-MM-dd")</td>
                <td>@user.PhoneNumber</td>
                <td>@user.Address</td>
                <td>@user.Role</td>
                <td>
                    <a asp-controller="Home" asp-action="UpdateUser" asp-route-PublicId="@user.PublicId"
                       class="btn btn-warning btn-sm">Update</a>
                    <a asp-controller="Home" asp-action="DeleteUser" asp-route-PublicId="@user.PublicId"
                       class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
function deleteSelectedUsers() {
    const checkboxes = document.querySelectorAll('.user-checkbox:checked');
    const selectedIds = Array.from(checkboxes).map(cb => cb.value);
    document.getElementById('selectedUserIds').value = selectedIds.join(',');
    document.getElementById('deleteSelectedForm').submit();
}
</script>
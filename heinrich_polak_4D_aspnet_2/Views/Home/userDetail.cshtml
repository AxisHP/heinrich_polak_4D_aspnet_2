@using UserApp.DataLayer.Entities
@model UserEntity

<h1>@Model.Id | @Model.Name</h1>
<h2>@Model.Email</h2>

<a asp-controller="Home" asp-action="UpdateUser" asp-route-PublicId="@Model.PublicId" class="btn btn-warning">Update user</a>
<a asp-controller="Home" asp-action="DeleteUser" asp-route-PublicId="@Model.PublicId" class="btn btn-danger">Delete user</a>
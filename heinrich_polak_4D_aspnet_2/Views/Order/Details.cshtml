@model OrderDetailsModel

@{
    ViewData["Title"] = "Order Details";
}

<h1>Order Details</h1>

<div class="card">
    <div class="card-body">
        <p><strong>Order Date:</strong> @Model.OrderDate.ToString("g")</p>
        <p><strong>Customer:</strong> @Model.UserName</p>
        <p><strong>Status:</strong> @Model.Status</p>
        <p><strong>Total:</strong> @Model.TotalAmount.ToString("C")</p>

        <h4 class="mt-4">Items</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Subtotal</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.ItemName</td>
                        <td>@item.Price.ToString("C")</td>
                        <td>@item.Quantity</td>
                        <td>@((item.Price * item.Quantity).ToString("C"))</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to Orders</a>
</div>

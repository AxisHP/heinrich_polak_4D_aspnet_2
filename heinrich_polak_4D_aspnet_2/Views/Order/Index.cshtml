@model List<Common.DTO.OrderDTO>

@{
    ViewData["Title"] = "Orders";
    var userRole = Context.Session.GetString("UserRole");
    var isAdmin = userRole == "Admin";
}

<h1>Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th>Order Date</th>
            @if (isAdmin)
            {
                <th>Customer</th>
            }
            <th>Total</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderDate.ToString("g")</td>
                @if (isAdmin)
                {
                    <td>@order.UserName</td>
                }
                <td>@order.TotalAmount.ToString("C")</td>
                <td>@order.Status</td>
                <td>
                    <a asp-action="Details" asp-route-publicId="@order.PublicId" class="btn btn-sm btn-info">Details</a>
                    @if (isAdmin)
                    {
                        <a asp-action="UpdateStatus" asp-route-publicId="@order.PublicId" class="btn btn-sm btn-warning">Update Status</a>
                        @if (order.Status != Common.Enums.OrderStatus.Canceled && order.Status != Common.Enums.OrderStatus.Delivered)
                        {
                            <form asp-action="Cancel" method="post" class="d-inline">
                                <input type="hidden" name="publicId" value="@order.PublicId" />
                                <button type="submit" class="btn btn-sm btn-danger">Cancel</button>
                            </form>
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

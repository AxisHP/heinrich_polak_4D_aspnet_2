@model List<Common.DTO.FavouriteDTO>

@{
    ViewData["Title"] = "Favourites";
}

<h1>My Favourites</h1>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Item</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var fav in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="Item" asp-action="Details" asp-route-publicId="@fav.ItemPublicId">@fav.ItemName</a>
                    </td>
                    <td>@fav.ItemPrice.ToString("C")</td>
                    <td>
                        <form asp-controller="Cart" asp-action="Add" method="post" class="d-inline">
                            <input type="hidden" name="ItemPublicId" value="@fav.ItemPublicId" />
                            <input type="hidden" name="Quantity" value="1" />
                            <button type="submit" class="btn btn-sm btn-success">Add to Cart</button>
                        </form>
                        <form asp-action="Remove" method="post" class="d-inline">
                            <input type="hidden" name="itemPublicId" value="@fav.ItemPublicId" />
                            <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>You have no favourites yet.</p>
    <a asp-controller="Item" asp-action="Index" class="btn btn-primary">Browse Items</a>
}
